<div class="contents row">
  <% @aspirations.each do |aspiration| %>
    <div class="content_post">
      <div class="more">
        <ul class="more_list">
          <li>
            <%= link_to '詳細', aspiration_path(aspiration.id), method: :get %>
          </li>
          <li>
            <%= link_to '編集', edit_aspiration_path(aspiration.id), method: :get %>
          </li>
          <li>
            <%= link_to '削除', aspiration_path(aspiration.id), method: :delete %>
          </li>
        </ul>
      </div>
      <p><%= aspiration.title %></p>
      <span class="name">
        <%= aspiration.detail %>
      </span>
    </div>
  <% end %>
</div>