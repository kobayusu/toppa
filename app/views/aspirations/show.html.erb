<div class="contents row">
  <div class="content_post">
    <div class="more">
      <ul class="more_list">
        <li>
          <%= link_to '編集', edit_aspiration_path(@aspiration.id), method: :get %>
        </li>
        <li>
          <%= link_to '削除', aspiration_path(@aspiration.id), method: :delete %>
        </li>
      </ul>
    </div>
    <p><%= @aspiration.detail %></p>
    <span class="name">
      期日 <%= @aspiration.start_time %>
    </span>
    </span>
  </div>
</div>

<p id="notice"><%= notice %></p>
<%= link_to '日記をかく', new_record_path %>
<%= month_calendar do |date, record| %>
  <%= date.day %>

  <% record.each do |record| %>
    <div>
      <%= record.text %>
    </div>
  <% end %>
<% end %>