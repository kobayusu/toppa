<div class="contents row">
  <div class="content_post">
    <div class="more">
      <ul class="more_list">
      <% if user_signed_in? && current_user.id == @aspiration.user_id %>
        <li>
          <%= link_to '編集', edit_aspiration_path(@aspiration.id), method: :get %>
        </li>
        <li>
          <%= link_to '削除', aspiration_path(@aspiration.id), method: :delete %>
        </li>
      <% end %>
      </ul>
    </div>
    <p><%= @aspiration.detail %></p>
    <span class="name"><%= @aspiration.title%>
    </span>
  </div>
</div>

<p id="notice"><%= notice %></p>

<%= month_calendar do |date, aspirations| %>
  <%= date.day %>

  <% aspirations.each do |aspiration| %>
    <div>
      <%= aspiration.title %>
    </div>
  <% end %>
<% end %>